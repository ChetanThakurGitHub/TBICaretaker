<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tbi.com.fragment.sufferer.activity.EditProfileSuffererActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_gravity="top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first"
                android:layout_marginTop="@dimen/_minus5sdp">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:elevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_250sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:singleLine="true"
                                    android:text="@string/basic_info"
                                    android:textColor="@color/seagreen"
                                    android:textSize="@dimen/_12ssp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_25sdp">

                                    <TextView
                                        android:id="@+id/name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:singleLine="true"
                                        android:text="@string/full_name"
                                        android:textColor="@color/seagreen"
                                        android:textSize="@dimen/_10ssp" />

                                    <EditText
                                        android:id="@+id/et_for_fullName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_toRightOf="@+id/name"
                                        android:background="@null"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="end"
                                        android:scrollHorizontally="true"
                                        android:singleLine="true"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/darkgray"
                                        android:textSize="@dimen/_10ssp" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@color/lightgray" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:singleLine="true"
                                        android:text="@string/email"
                                        android:textColor="@color/seagreen"
                                        android:textSize="@dimen/_10ssp" />

                                    <EditText
                                        android:id="@+id/et_for_emails"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_toRightOf="@+id/email"
                                        android:background="@null"
                                        android:ellipsize="start"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="end"
                                        android:singleLine="true"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/darkgray"
                                        android:textSize="@dimen/_10ssp" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@color/lightgray" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/contact"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:singleLine="true"
                                        android:text="@string/emergency"
                                        android:textColor="@color/seagreen"
                                        android:textSize="@dimen/_10ssp" />

                                    <EditText
                                        android:id="@+id/et_for_contactNo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_toRightOf="@+id/contact"
                                        android:background="@null"
                                        android:ellipsize="start"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="end"
                                        android:hint="@string/na"
                                        android:inputType="number"
                                        android:singleLine="true"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/darkgray"
                                        android:textColorHint="@color/darkgray"
                                        android:textSize="@dimen/_10ssp" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@color/lightgray" />

                                <RelativeLayout
                                    android:id="@+id/layout_for_changePassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_marginRight="@dimen/_8sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:singleLine="true"
                                        android:text="@string/change_password"
                                        android:textColor="@color/seagreen"
                                        android:textSize="@dimen/_10ssp" />

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:padding="@dimen/_3sdp"
                                        android:src="@drawable/ic_right_arrow" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@color/lightgray" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:singleLine="true"
                                    android:text="@string/health_info"
                                    android:textColor="@color/seagreen"
                                    android:textSize="@dimen/_12ssp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/age"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:singleLine="true"
                                        android:text="@string/age"
                                        android:textColor="@color/seagreen"
                                        android:textSize="@dimen/_10ssp" />

                                    <TextView
                                        android:id="@+id/et_for_age"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_toRightOf="@+id/age"
                                        android:background="@null"
                                        android:ellipsize="start"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="end"
                                        android:singleLine="true"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/darkgray"
                                        android:textSize="@dimen/_10ssp" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@color/lightgray" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/blood"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:singleLine="true"
                                        android:text="@string/blood_group"
                                        android:textColor="@color/seagreen"
                                        android:textSize="@dimen/_10ssp" />

                                    <TextView
                                        android:id="@+id/et_for_bloodGroup"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_toRightOf="@+id/blood"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="end"
                                        android:textColor="@color/darkgray"
                                        android:textSize="@dimen/_10ssp" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@color/lightgray" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/weight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:singleLine="true"
                                        android:text="@string/weight"
                                        android:textColor="@color/seagreen"
                                        android:textSize="@dimen/_10ssp" />

                                    <EditText
                                        android:id="@+id/et_for_weight"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_toRightOf="@+id/weight"
                                        android:background="@null"
                                        android:ellipsize="start"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="end"
                                        android:hint="@string/na"
                                        android:inputType="number"
                                        android:maxLength="3"
                                        android:singleLine="true"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/darkgray"
                                        android:textColorHint="@color/darkgray"
                                        android:textSize="@dimen/_10ssp" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@color/lightgray" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/height"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:singleLine="true"
                                        android:text="@string/height"
                                        android:textColor="@color/seagreen"
                                        android:textSize="@dimen/_10ssp" />

                                    <EditText
                                        android:id="@+id/et_for_height"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_toRightOf="@+id/height"
                                        android:background="@null"
                                        android:ellipsize="start"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="end"
                                        android:hint="@string/na"
                                        android:inputType="number"
                                        android:maxLength="3"
                                        android:singleLine="true"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/darkgray"
                                        android:textColorHint="@color/darkgray"
                                        android:textSize="@dimen/_10ssp" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@color/lightgray" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/gender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:singleLine="true"
                                        android:text="@string/gender"
                                        android:textColor="@color/seagreen"
                                        android:textSize="@dimen/_10ssp" />

                                    <TextView
                                        android:id="@+id/et_for_gender"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_toRightOf="@+id/gender"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="end"
                                        android:textColor="@color/darkgray"
                                        android:textSize="@dimen/_10ssp" />

                                </RelativeLayout>

                                <Button
                                    android:id="@+id/btn_for_update"
                                    android:layout_width="@dimen/_150sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:background="@drawable/btn_rounded_corner_bg"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="@string/update"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@color/seagreen"

                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/layout_for_userImg"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_85sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_25sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/ic_user_image"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="@dimen/_2sdp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/iv_for_camera"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/circle_for_camera_bg"
                            android:src="@drawable/ic_camera_white" />

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_for_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tv_for_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_light"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
