<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp">


    <RelativeLayout
        android:id="@+id/layout_for_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_for_color"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_minus50sdp"
            android:background="@drawable/circle_notificatioan_bg" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_for_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:text="14"
                        android:textColor="@color/seagreen" />

                    <TextView
                        android:id="@+id/tv_for_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:text="feb"
                        android:textColor="@color/darkgray" />

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@color/lightgray" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_for_tittleList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_regular"
                android:maxWidth="@dimen/_170sdp"
                android:singleLine="true"
                android:text="chetan thakur dsfdsfsdfsshfd"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_for_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="10:00"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_for_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:ellipsize="end"
            android:minWidth="@dimen/_170sdp"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:text="wruoewulfjdklsfjklsdfdsfsddjlkdjsf"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

