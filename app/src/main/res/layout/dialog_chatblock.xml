<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_full_bg"
            android:paddingLeft="@dimen/_20sdp">

            <ImageView
                android:id="@+id/iv_for_cansel"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_notificatioan_bg"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_cross_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_for_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/_14ssp" />

                <Button
                    android:id="@+id/btn_for_ok"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/circle_notificatioan_bg"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="ok"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg"
        android:padding="@dimen/_5sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_sufferer" />

</RelativeLayout>
