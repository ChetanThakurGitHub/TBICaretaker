<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/_80sdp"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dragEdge="right"
        app:mode="same_level">

        <FrameLayout
            android:id="@+id/delete_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:minHeight="@dimen/_50sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightgray" />

                <ImageView
                    android:id="@+id/iv_for_editSwipe"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_edit_gray" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/front_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_50sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/circle"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/circle_without_border_bg" />

                    <TextView
                        android:id="@+id/tv_for_faqTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toLeftOf="@+id/iv_for_check"
                        android:layout_toRightOf="@+id/circle"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Chsfkd;lsfkdfkd;lsfk;sdlfk;lsdfk;lsdf ?"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/_14ssp" />

                    <ImageView
                        android:id="@+id/iv_for_check"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_unchecked_faq"
                        android:visibility="gone" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_for_descriptionFAQ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="lskjdflkdsjfkldsjfkldsfjdsfjhsdkjfhsdkjfhdskfhkfhdskjfhdskfhdskfjhdskfjhdskfhdskfhdksfhdskfhdskfhdskfhdskfhdskfhdskfhdskfhsdkfhdskfhdsfkhdskfhdsfkdhsfkjkjdshfkdhfdkshfdksfhdksfhdksfhdksfhdskfhdskjfh"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/_12ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/lightgray" />
            </LinearLayout>

        </FrameLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>

</LinearLayout>
